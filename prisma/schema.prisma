generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(cuid())
  name                String?
  email               String               @unique
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  image               String?
  emailVerified       DateTime?
  accounts            Account[]
  sessions            Session[]
  contents            content[]
  entireBrainLinkHash entireBrainLinkHash?
  projects            Project[]
  websiteCategory     WebsiteCategory[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model content {
  id                String          @id @default(cuid())
  title             String
  description       String
  link              String
  websiteCategoryId String
  websiteCategory   WebsiteCategory @relation(fields: [websiteCategoryId], references: [id])

  userId              String
  tweetId             String?
  user                User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  individulalLinkHash individualLinkHash?
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  projectId           String?
  project             ProjectsContent[]
}

model WebsiteCategory {
  id          String  @id @default(cuid())
  key         String 
  displayName String 
  icon        String?
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  contents  content[]
  domains   String[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([userId, key])
}

model Project {
  id           String            @id @default(cuid())
  projectsname String
  contents     ProjectsContent[]
  projectNotes ProjectNote?
  projectChat  ProjectChat?
  userId       String
  user         User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
}

model ProjectsContent {
  id        String   @id @default(cuid())
  projectId String
  contentId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  content   content  @relation(fields: [contentId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, contentId])
}

model ProjectNote {
  id        String   @id @default(cuid())
  note      String
  projectId String   @unique
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectChat {
  id        String   @id @default(cuid())
  projectId String   @unique
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model individualLinkHash {
  id        String   @id @default(cuid())
  contentId String   @unique
  content   content  @relation(fields: [contentId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model entireBrainLinkHash {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
